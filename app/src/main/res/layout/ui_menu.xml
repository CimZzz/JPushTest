<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_H"
        android:background="@color/themeColorBlue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/menu_TopMarginSide"
            android:layout_marginEnd="@dimen/menu_TopMarginSide"
            android:layout_gravity="center">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/menu_HeaderPicSize"
                android:layout_height="@dimen/menu_HeaderPicSize"
                android:layout_marginEnd="@dimen/menu_HeaderMarginSide"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_dog"
                app:civ_border_width="10dp"
                app:civ_border_color="#616161"
                android:id="@+id/menuHeaderPic"/>

        </RelativeLayout>
        
    </FrameLayout>

</FrameLayout>