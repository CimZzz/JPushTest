<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.example.yumi.jpushtest.widgets.SliderSwitchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:leftFont="Login"
        app:rightFont="Register"
        app:fontSize="20sp"
        app:fontColor="#cbcbcb"
        app:fontColorFocused="#1bb4eb"
        app:lineHeight="4dp"
        app:lineHeightMargin="3dp"
        android:id="@+id/enterTab"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterLogin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10.5dp"
                android:layout_marginBottom="10.5dp"
                android:background="#00000000"
                android:hint="输入手机号码/邮箱"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15.5dp"
                android:layout_marginBottom="15.5dp"
                android:background="#00000000"
                android:inputType="textPassword"
                android:hint="输入密码"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="29.5dp"
                android:text="登  录"
                android:textColor="#FFF"
                android:background="@drawable/bg_enter_loginbtn"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="注册账号"
                    android:textSize="12sp"
                    android:textColor="#1BB5EC"
                    android:id="@+id/enterRegisterText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="忘记密码？"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:id="@+id/enterForgive"/>

            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/enterRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10.5dp"
                android:layout_marginBottom="10.5dp"
                android:background="#00000000"
                android:hint="输入手机号码/邮箱"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="输入验证码"/>
                
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_enter_validbtn"
                    android:textSize="12sp"
                    android:text="获取验证码"
                    android:textColor="#1BB5EC"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15.5dp"
                android:layout_marginBottom="15.5dp"
                android:background="#00000000"
                android:inputType="textPassword"
                android:hint="输入密码"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="29.5dp"
                android:text="注  册"
                android:textColor="#FFF"
                android:background="@drawable/bg_enter_loginbtn"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册即同意"
                        android:textSize="12sp"
                        android:textColor="#C1C1C1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《免责声明》"
                        android:textSize="12sp"
                        android:textColor="#1BB5EC"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>