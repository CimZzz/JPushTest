<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:focusable="true"
android:focusableInTouchMode="true" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_InputH"
        android:background="#00000000"
        android:inputType="textPassword"
        android:textSize="@dimen/login_TextSize"
        android:hint="输入新密码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_InputH"
        android:background="#00000000"
        android:inputType="textPassword"
        android:textSize="@dimen/login_TextSize"
        android:hint="再次输入新密码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_BigBtnH"
        android:layout_marginTop="@dimen/login_BigBtnMarginTop"
        style="?android:attr/borderlessButtonStyle"
        android:text="完成"
        android:textColor="#FFF"
        android:background="@drawable/bg_enter_loginbtn"
        android:id="@+id/pwdConfirmCompleted"/>

</LinearLayout>
</LinearLayout>