<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColorBlue</item>
        <item name="colorPrimaryDark">@color/themeColorBlueDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/share1</item>
        <item name="android:windowSharedElementExitTransition">@transition/share1</item>

        <item name="android:windowSharedElementReenterTransition">@transition/share1</item>
        <item name="android:windowSharedElementReturnTransition">@transition/share1</item>
    </style>

    <style name="InputUnderline" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#5e5e5e</item>
        <item name="colorControlActivated">#afafaf</item>
    </style>

    <style name="test" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_enter_loginbtn</item>
    </style>
    <color name="themeColorBlue">#1BB5EC</color>
    <color name="themeColorBlueDark">#0eb4ef</color>
    <color name="login_NotActiveTextColor">#cbcbcb</color>
</resources>